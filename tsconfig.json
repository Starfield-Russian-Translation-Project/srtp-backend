{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "esnext",
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "types": ["node"],  
    "strict": true,
    "sourceMap": true,
    "paths": {
      "@app": ["src/app"],
      "@api": ["src/api/v1"],
    },
  },
  "include": ["./src/**/*"]
}